<h1>Delete Book: <%= book.title %></h1>
<% if (book_instances.length) { %>
  <p><strong>Delete the following instances before attempting to delete this book.</strong></p>
  <div style="margin-left:20px;margin-top:20px">
    <h4>Instances</h4>
    <dl>
      <% book_instances.forEach(function(instance) { %>
        <dt><%= instance.imprint %> - <%= instance.status %></dt>
        <dd><%= instance.due_back_formatted %></dd>
      <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this Book?</p>
  <form method="POST" action="">
    <div class="form-group">
      <input id="id" class="form-control" type="hidden" name="id" required="true" value="<%= book._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>